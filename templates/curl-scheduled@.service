[Unit]
Description=Run an HTTP request via curl designated '%i'
After=network.target

[Service]
Type=oneshot
EnvironmentFile=/etc/systemd/system/%i.env
ExecStart=/usr/bin/curl $CURL_ARGS "$URL"
Restart=no 

# Security hardening
ProtectSystem=strict
NoNewPrivileges=true
PrivateTmp=true
ProtectKernelModules=true
ProtectControlGroups=true
ProtectKernelTunables=true
ProtectClock=yes
RestrictSUIDSGID=true

[Install]
WantedBy=multi-user.targer
